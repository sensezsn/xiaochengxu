/* tabBar总体 */

.tab-bar {
  width: 100%;
  height: 70px;
  display: flex;
  background: #fdfdfd;
  position: fixed;
  bottom: 0;
  z-index: 999;
}

/* tabBar内容快 */

.tab-bar-index {
  flex: 1;
  font-size: 30rpx;
  height: 50px;
  width: 20%;
  bottom: 0;
}

/* tarBar添加发布单独内容快 */

.tab-bar-index-add {
  font-size: 30rpx;
  z-index: 9;
  height: 70rpx;
  position: relative;
  bottom: 70rpx;
  width: 20%;
}

/* 图标字体结合内容快 */

.tab-bar-icon {
  width: 100%;
  height: 45px;
  margin-top: 12px;
}

/* 图标字体结合内容快添加发布单独设置 */

.tab-bar-icon_add {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  position: relative;
  border: 8px solid #fdfdfd;
}

.tab-bar-icon_add.selected {
  background: #4cc7f3;
}

/* 内容快图片 */

.tab-bar-img {
  width: 16px;
  height: 16px;
  margin: 0 auto;
  display: block;
}

/* 内容快添加发布单独图片设置 */

.tab-bar-img-add {
  width: 160rpx;
  height: 160rpx;
  line-height: 54rpx;
  text-align: center;
  margin: 0 auto;
  display: block;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

/* 内容快挤位置 */

.tab-bar-tmp {
  width: 100%;
  height: 8px;
}

/* 内容快文字 */

.tab-bar-text {
  text-align: center;
  font-size: 9px;
  margin: 0 auto;
}
.tab-bar-text.message-text{
  position: absolute;
  bottom: -20px;
  left: 50%;
  margin-left: -10px;
}