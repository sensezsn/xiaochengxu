.paddingBottom{
  padding-bottom: 200rpx;
}
.article-wrap{
  margin-top: 10px;
  margin-bottom: 20px;
  position: relative;
 }
 .article-wrap .icon-article{
   position: absolute;
   right: 10px;
   top: 2px;
   font-size: 12px;
   color: #10cbd2;
 }
 .article-wrap .tittle-wrap {
   padding-bottom: 6px;
 }
 .article-wrap .tittle-wrap .icon{
   font-size: 14px;
   font-weight: 500;
   margin-right: 4px;
 }
 .article-wrap .tittle-wrap{
   color: #10cbd2;
   font-size: 12px;
   padding-left: 20px;
 }
 .article-wrap .icon-article image{
   width: 14px;
   height: 14px;
   position: relative;
   top: 2px;
   right: 2px;
   overflow: hidden;
   display: inline-block;
 }
 .article-list{
   padding: 4px 10px;
   margin-top: -10px;
 }
 .article-list .article-item{
   border-bottom: 1px solid #efefef;
   position: relative;
   padding: 10px;
 }
 .article-list .article-item .little-text{
   font-size: 12px;
   color: #a9a9a9;
 }
 .article-list .article-item .item-text{
   width: 100%;
   padding-right: 220rpx;
   box-sizing: border-box;
 }
 .article-list .article-item .select-icon{
   width: 14px;
   height: 14px;
   overflow: hidden;
   position: absolute;
   top: 34%;
   left: 0px;
 }
 .article-list .article-item .img-wrap {
   width: 180rpx;
   height: 150rpx;
   position: absolute;
   right: 10px;
   top: 10px;
   border-radius: 10px;
   overflow: hidden;
 }
 .article-list .article-item .img-wrap image{
   width: 100%;
   height: 100%;
 }


.btn-position{
  position: fixed;
  bottom: 0;
  width: 100%;
  padding-bottom: 20px;
  background: #fff;

}
.btn-position .btn-wrap  .btn{
  width: 100%;
}
.btn-position .btn-wrap .add-icon{
  font-size: 20px;
  color: #fff;
  display: inline-block;
  padding-left: 10px;
}